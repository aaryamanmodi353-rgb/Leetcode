class Solution {
    public Node copyRandomList(Node head) {
        Node curr = head;
        HashMap<Node, Node> hmap = new HashMap<>();
        
        
        while(curr != null){
            Node newNode=  new Node(curr.val);
            hmap.put(curr, newNode);
            curr = curr.next;


        }

        curr = head;

        while(curr != null){
            
            Node newcurrNode = hmap.get(curr);
            newcurrNode.next = hmap.get(curr.next);
            newcurrNode.random = hmap.get(curr.random);
            curr = curr.next;

            
        
            
        }
        

        return hmap.get(head);

        
        
    }

//Best approach
class Solution {
    public Node copyRandomList(Node head) {
        Node curr = head;
        
        Node newNode = new Node(-1);
        Node result = newNode;

        while(curr != null){
            Node newcurrNode = curr.next;
            Node currNode = new Node(curr.val);
            currNode.next = newcurrNode;
            curr.next = currNode;
            curr = newcurrNode;

        }

        curr = head;

        while(curr != null){
            Node newcurrNode = curr.next;
            if(curr.random != null){
            newcurrNode.random = curr.random.next;
            }
            else{
                newcurrNode.random = null;
            }
           
            curr = curr.next.next;

        }

        curr = head;

        while(curr != null){
            newNode.next = curr.next;
            curr.next = curr.next.next;
            newNode = newNode.next;
            curr = curr.next;
            
        }

        return result.next;
     
        
    }
}
}
